			link(rel="stylesheet" href="assets/wpkitui2/wpkitui.css")
			script(type="text/javascript" src="assets/wpkitui2/wpkitui.js")
			//slick
			link(rel="stylesheet" href="assets/slick/slick-theme.css")
			link(rel="stylesheet" href="assets/slick/slick.css")
			script(type="text/javascript" src="assets/slick/slick.min.js")
			// Google pretify
			link(href="assets/prettyprint/theme.css" rel="stylesheet" )
			script(type="text/javascript" src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js")
			<!-- Fonts -->
			// Fonts
			link(href="fonts/font-awesome/font-awesome.css" rel="stylesheet")
			link(href="https://fonts.googleapis.com/css?family=Lato:300,400,900" rel="stylesheet")
			link(href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700" rel="stylesheet")
			<!-- Styles -->
			link(rel="stylesheet" href="css/style.css")

