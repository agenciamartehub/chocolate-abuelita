//- productos.jade
extends header.jade

block title
	title Rosca de Reyes con Chocolate Abuelita<sup>®</sup>  - Nestlé

block description
	meta(name="description" content="Descubre cómo hacer Rosca de Reyes con Chocolate Abuelita y otras deliciosas recetas en https://www.abuelita.com.mx/")

block openGraph
	meta(property="og:url" content=url + 'como-hacer-rosca-de-reyes-con-chocolate-abuelita.html')
	meta(property="og:title" content="Cómo hacer Rosca de Reyes con Chocolate Abuelita<sup>®</sup>  - Nestlé")
	meta(property="og:description" content="Descubre cómo hacer Rosca de Reyes con Chocolate Abuelita y otras deliciosas recetas en https://www.abuelita.com.mx/")
	meta(property="og:type" content="article")
	meta(property="og:image" content=url + 'img/compartir-receta-rosca-reyes-chocolate-abuelita-nestle.png')

block twitterCards
	meta(name="twitter:card" content="summary_large_image")
	meta(name="twitter:site" content='@' + twitterUser)
	meta(name="twitter:creator" content='@' + twitterUser)
	meta(name="twitter:title" content="Cómo hacer Rosca de Reyes con Chocolate Abuelita<sup>®</sup>  - Nestlé")
	meta(name="twitter:description" content="Descubre cómo hacer Rosca de Reyes con Chocolate Abuelita y otras deliciosas recetas en https://www.abuelita.com.mx/")
	meta(name="twitter:image" content=url + 'img/compartir-receta-rosca-reyes-chocolate-abuelita-nestle.png')
		
block content

	//- 
		Instrucciones para botón de compartir
		
		Abajo encontrarás la variable mensajeDeTwitter, simplemente introduce 
		el texto que aparecerá al compartir en twitter
		
		EL botón se genera desde un mixin en jade/_mixins.jade 
		
		El mensaje se puede introducir directamente en el mixin como string pero para practicidad
		se ha incluido en la variable mencionada.
		
		+btnShare( 'ElMensajeDeTwitter' )

	-var mensajeDeTwitter = 'Descubre cómo hacer Rosca de Reyes con Chocolate Abuelita y otras deliciosas recetas en www.abuelita.com.mx'
	-var receta = 'como-hacer-rosca-de-reyes-con-chocolate-abuelita.html'

	main#receta(role="main")

		+sectionHeader(
				'receta-banner', 
				'ui-bg-bold', 
				'Receta', 
				'Cómo hacer Rosca de Reyes con Chocolate Abuelita<sup>®</sup>', 
				url + 'img/receta-banner-como-preparar-rosca-de-reyes-chocolate-abuelita-nestle.jpg', 
				url + 'img/icon-recetas.png'
			)

		.ui-block-texture-cover.print
			section#receta-video.wk-section.ui-box-model.wk-wrap-1100.wk-margin-y-40.no-print
				.wk-section-wrap
					a(href="https://www.youtube.com/watch?v=39rYj1j4dtI" data-fancybox)
						img.wk-img-responsive(src=url + "img/video-play-receta-rosca-reyes-chocolate-abuelita-nestle.jpg")
			aside#receta-ingredientes.wk-wrap-1100.wk-margin-y-40.ui-box-model
				.wk-section-wrap
					
					h6.ui-title
						img(src=url + "img/icon-ingredientes.png")
						| Ingredientes
					
					ul
						li 1 sobre de levadura.
						li 1 cdita. de azúcar.
						li 4 cditas. de agua tibia.
						li 5 1/3 Tazas de harina.
						li 1 Taza de azúcar mascabado.
						li 1 Lata de Leche Evaporada CARNATION<sup>®</sup> CLAVEL<sup>®</sup>.
						li 3 huevos.
						li 2 yemas.
						li Ralladura de 2 naranjas.
						li 2 barras y 1/4 de mantequilla.
						li 3 muñequitos de plástico para rosca
						li 200g de Chocolate para Mesa Abuelita<sup>®</sup>.
						
					p Pasta de azucar
					
					ul
						li 1 Taza de manteca vegetal.
						li 1 Taza y media de azúcar.
						li 1 Taza de harina.
						li 1 Cdita. de polvo para hornear.
						
					ul 
						li 12 tiras de ate de guayaba, cortado en tiras
						li 12 tiras de ate de membrillo, cortado en tiras
						li ¾ taza de higo cristalizado, cortado en cuartos
						
					h6.ui-title
						img(src=url + "img/icon-hornear.png")
						| Horno precalentado a 180°C
					
					h6.ui-title
						img(src=url + "img/icon-preparacion.png")
						| Preparación
					
			section#receta-content.wk-wrap-1100.ui-box-model.wk-m-text-center
				.wk-section-wrap
				
					//
						+recetaPaso ( 'numeroDePaso', 'Contenido' )
					
					+recetaPaso(
						'1',
						'Mezcla en un recipiente la levadura, el azúcar y el agua tibia.'
					)
					
					+recetaPaso(
						'2',
						'Agrega a la mezcla la harina, el azúcar mascabado, la Leche Evaporada CARNATION<sup>®</sup> CLAVEL<sup>®</sup>, 2 huevos, las 2 yemas, la ralladura de naranja y la mantequilla.'
					)
					
					+recetaPaso(
						'3',
						'Amásala y golpéala contra la mesa hasta que esté tersa, elástica y no se te pegue en los dedos. Déjala reposar en un lugar tibio tapada con un trapo húmedo hasta que doble su volumen.'
					)
					
					+recetaPaso(
						'4',
						'Amasa y agrega el Chocolate para Mesa ABUELITA<sup>®</sup> troceado.'
					)
					
					+recetaPaso(
						'5',
						'Toma la masa y amasa suavemente para extraer el aire que se ha formado, forma una bola y con tu mano, haz un hoyo en el centro, coloca los muñequitos dentro de la masa. Moldea y estira la masa con las manos para formar la rosca y colócala en una charola engrasada. Déjala reposar en un lugar tibio tapada con un trapo húmedo hasta que doble su volumen.'
					)
					
					+recetaPaso(
						'6',
						'Para la pasta de azúcar bate la manteca vegetal, el azúcar, la harina y el polvo para hornear.os'
					)
					
					+recetaPaso(
						'7',
						'Barniza la rosca con 1 huevo batido.'
					)
					
					+recetaPaso(
						'8',
						'Divide la pasta de azúcar en tiras y colócala sobre la rosca junto con el ate y los higos cristalizados en forma decorativa.'
					)
					
					+recetaPaso(
						'9',
						'Hornea por 25 minutos o hasta que esté dorada.'
					)
					
										
						
			section#receta-buttons.wk-wrap-1100.wk-text-center.ui-d-row-padding
				.wk-section-wrap
					.wk-cols
						.wk-col-3.ui-box-model.wk-d
							a.ui-btn(href="#" onclick="window.print()")
								img(src=url + "img/icon-imprimir.png" alt="Imprimir")
								span Imprimir
								
						.wk-col-3.ui-box-model.no-print
							+btnShare( mensajeDeTwitter, receta )
							
						.wk-col-3.ui-box-model.no-print
							a.ui-btn(href="/recetas.html") 
								img(src=url + "img/icon-conoce-mas-recetas.png" alt="Más recetas")
								span Más recetas
								
						.wk-col-3.ui-box-model.no-print
							a.ui-btn(href="#") 
								span.icon.fa.fa-shopping-cart.ui-text-gold
								span Comprar en superama		
					
			+sectionLeyend('receta-leyend', '')
				img.wk-margin-y-20(src=url + "img/icon-consejo.png" alt="Consejo de Abuelita - Nestle")
				h3.ui-title.ui-text-gold Consejo de Abuelita<sup>®</sup>;
				p La masa para hacer la rosca es una masa pegajosa intenta no agregar demasiada harina al momento de amasar o formarla ya que puede afectar en nuestro resultado final.
				p Al momento de darle forma puedes poner un aro o molde redondo engrasado para que no se cierre al momento de hornearla.
					
									
	include footer.jade
