//- index.jade
extends header.jade

block title
  title Historia - Nestlé

block description
  meta(name="description" content="Historia Chocolate Abuelita")
  
block content

  main#receta(role="main")

    +sectionHeader(
        'historia-banner', 
        'ui-bg-bold', 
        'Nuestra historia', 
        '', 
        url + 'img/banner-historia.jpg', 
        url + 'img/icon-historia.png'
      )
      
    
    mixin uiTimeline( side, date, thumb, content )
      div(class='ui-timeline-row-' + side )
        .wk-cols-m
          if side == 'left'
            .wk-col
              header.ui-timeline-header
                img.ui-timeline-thumb(src='' + thumb + '' alt="Fábrica de Chocolates La Azteca - Nestle" width="200")
                time.ui-timeline-date.ui-title-big= date
              h3.ui-timeline-excerpt.ui-subtitle-small!= content 
          else 
            .wk-col.wk-d
          .wk-col-1
            .ui-timeline-guide
              span.ui-timeline-line-before
              span.ui-timeline-dot
              span.ui-timeline-line-after
          if side == 'right'
            .wk-col 
              header.ui-timeline-header
                time.ui-timeline-date.ui-title-big= date
                img.ui-timeline-thumb(src='' + thumb + '' alt="Fábrica de Chocolates La Azteca - Nestle" width="200")
              h3.ui-timeline-excerpt.ui-subtitle-small!= content 
          else
            .wk-col.wk-d
      
    .ui-block-texture-cover.ui-row-padding
      section#historia-timeline.ui-timeline.wk-wrap-1100
        .wk-section-wrap
          +uiTimeline( 
            'right', 
            '1919', 
            url + 'img/Nestle-1919-fabrica-la-azteca.png', 
            'Se funda la Fábrica de Chocolates <strong>La Azteca </strong>por los hermanos Gonzáles Barragán en Orizaba, Veracruz.' 
            )
            
          +uiTimeline( 
            'left', 
            '1929', 
            url + 'img/Nestle-1929-fabrica-la-azteca-ciudad-de-mexico.png', 
            '<strong>La Fábrica de Chocolates La Azteca</strong> es trasladada a la Ciudad de México.' 
            )
            
          +uiTimeline(
            'right',
            '1939',
            url + 'img/Nestle-1939-Chocolate-abuelita.png',
            'Nace la marca <strong>Chocolate Abuelita<sup>®</sup></strong>'
            )
            
          +uiTimeline(
            'left',
            '1973',
            url + 'img/Nestle-1973-sara-garcia-chocolate-abuelita.png',
            '<strong>Sara García</strong> se convierte en la cara de Chocolate Abuelita<sup>®</sup> al ser un icono mexicano que representa los atributos más importantes de la personalidad de la marca: <strong> apapachadora, cálida, hogareña.</strong>'
            )
            
          +uiTimeline(
            'right',
            '1995',
            url + 'img/Neslte-1995-Chocolate-abuelita.png',
            '<strong>Nestlé<sup>®</sup></strong> adquiere las marcas de chocolates de La Azteca entre ellas a Chocolate Abuelita<sup>®</sup>'
            )
            
          +uiTimeline(
            'left',
            '2013',
            url + 'img/Nestle-2013-cocoa-plan.png',
            'Se lanza <strong>Cocoa Plan<sup>®</sup> Nestlé<sup>®</sup></strong>, reforzando el compromiso de la compañía con la recuperación del cacao originario de México.'
            )
               
          +uiTimeline(
            'right',
            '2017',
            url + 'img/Nestle-2017-toluca-mexico.png',
            '<strong>Chocolate Abuelita<sup>®</sup></strong> actualmente es producido en México, en las fábricas de Toluca. Lleva más de 75 años incitando la unión de las familias mexicanas a través de su auténtico <strong>sabor, aroma y espuma</strong>.'
            )
  include footer.jade

