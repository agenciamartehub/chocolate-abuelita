//- productos.jade
extends header.jade

block title
	title Productos - Nestlé

block description
	meta(name="description" content="Productos Chocolate Abuelita - Nestlé")
	
block content

	main(role="main")
		+sectionHeader(
				'nuestros-productos-banner', 
				'ui-bg-red', 
				'Nuestros productos', 
				'', 
				'img/banner-productos.jpg', 
				'img/icon-productos.png'
			)
			.container.ui-box-model
				//- 
					Modal con layout de promoción	
					
					Cómo llamar a un modal:
					a(href="javascript:;" data-fancybox data-src="#id-del-modal") Contenido
					
					e incluir el mixin en alguna sección del layout con los siguientes argumentos:
					
					+modalPromocion( 'id', 'titulo', 'contenido' )
					
					$id - El id al que se hará referencia en el link que abre el modal
					$titulo - El título que aparecerá en el modal
					$contenido - El contenido del modal, acepta tags de html p.ej <strong></strong>
					
					El template de este mixin se encuentra en jade/_mixins.jade
					
				a.ui-btn-gold(href="javascript:;" data-fancybox data-src="#promociones-modal") Conoce nuestras <br> promociones
				
				+modalPromocion( 
					'promociones-modal',
					'Conoce nuestras promociones', 
					'<img class="wk-d" src="img/banner-promo-abuelita-nestle.jpg"><img class="wk-m" src="img/banner-movil-promo-abuelita-nestle.jpg">', 
					'http://abuelita.agenciamarte.com.mx'
					)
						
					
		+sectionLeyend('productos-leyend', '')
			strong.ui-text-gold Lorem ipsum dolor sit amet, consectetur adipiscing 
			span Donec vel ipsum eu enim faucibus semper sed non leo. Maecenas vehicula, nisi ut ullamcorper molestie.

		section#nuestros-productos.ui-block-texture-cover.ui-box-model.wk-text-center
			.wk-section-wrap
				.wk-cols
					.wk-col-3
						//-
							Los productos se imprimen con un mixin con la siguiente estructura:
							
							+producto( 'id', 'titulo', 'descripcion', 'imagen', 'ContenidoDeModal' )
							
							$id - El id del modal, no del producto
							$titulo - EL título del producto, aparecerá en el producto
							$descripcion - La descripción del producto en forma de peso del empaque
							$imagen - URL relativa de la imagen desde la raíz del proyecto
							$contenidoDeModal - El contenido del modal (acepta tags normales de html p.ej. <strong>Texto</strong>)
							
							El mixin se encuentra en jade/_mixins.jade
						+producto( 
							'abuelita-clasico', 
							'Abuelita Clásico', 
							'540g', 
							'img/chocolate-abuelita-clasico-nestle.png', 
							'<img class="wk-d" src="img/preparacion-tableta-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita Clásico - Nestlé"><img class="wk-m" src="img/preparacion-tableta-chocolate-abuelita-nestle-movil.png" alt="Preparación Chocolate Abuelita Clásico - Nestlé">' 
							)
					.wk-col-3
						+producto( 
							'abuelita-duo', 
							'Abuelita Duo Pack', 
							'540g', 
							'img/chocolate-abuelita-duo-pack-nestle.png', 
							'<img class="wk-d" src="img/preparacion-tableta-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita Clásico - Duo Pack 540g - Nestlé"><img class="wk-m" src="img/preparacion-tableta-chocolate-abuelita-nestle-movil.png" alt="Preparación Chocolate Abuelita Clásico - Duo Pack 540g - Nestlé">' 
							)
					.wk-col-3
						+producto( 
							'abuelita-clasico-chico', 
							'Abuelita Clásico', 
							'360g', 
							'img/chocolate-abuelita-clasico-small-nestle.png', 
							'<img class="wk-d" src="img/preparacion-tableta-360g-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita Clásico 360g"><img class="wk-m" src="img/preparacion-tableta-360g-chocolate-abuelita-nestle-movil.png" alt="Preparación Chocolate Abuelita Clásico 360g">' 
							)
					.wk-col-3
						+producto( 
							'abuelita-granulado', 
							'Abuelita Granulado', 
							'320g', 
							'img/chocolate-abuelita-granulado-nestle.png', 
							'<img class="wk-d" src="img/preparacion-polvo-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita Granulado - Nestlé"><img class="wk-m" src="img/preparacion-polvo-chocolate-abuelita-nestle-movil.png" alt="Preparación Chocolate Abuelita Granulado - Nestlé">' 
							)
				.wk-cols
					.wk-col-3
						+producto( 
							'abuelita-marqueta', 
							'Abuelita Marqueta', 
							'180g', 
							'img/chocolate-abuelita-marqueta-nestle.png', 
							'<img class="wk-d" src="img/preparacion-marqueta-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita Marqueta - Nestlé"><img class="wk-m" src="img/preparacion-marqueta-chocolate-abuelita-nestle-movil.png" alt="Preparación Chocolate Abuelita Marqueta - Nestlé">' 
							)
					.wk-col-3
						+producto( 
							'abuelita-duo-pack', 
							'Abuelita Duo Pack', 
							'', 
							'img/chocolate-abuelita-duo-pack.png', 
							'<img class="wk-d" src="img/preparacion-instantaneo-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita - Duo Pack - Nestlé"><img class="wk-m" src="img/preparacion-instantaneo-chocolate-abuelita-nestle-movil.jpg" alt="Preparación Chocolate Abuelita - Duo Pack - Nestlé">' 
							)
					.wk-col-3
						+producto( 
							'abuelita-instantaneo', 
							'Abuelita Instantaneo', 
							'40g', 
							'img/chocolate-abuelita-instantaneo-nestle.png', 
							'<img class="wk-d" src="img/preparacion-instantaneo-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita Instantaneo - Nestlé"><img class="wk-m" src="img/preparacion-instantaneo-chocolate-abuelita-nestle-movil.jpg" alt="Preparación Chocolate Abuelita Instantaneo - Nestlé">' 
							)
					.wk-col-3
						+producto( 
							'abuelita-promocion', 
							'Abuelita Promoción', 
							'630g', 
							'img/chocolate-abuelita-promocion-nestle.png', 
							'<img class="wk-d" src="img/preparacion-tableta-chocolate-abuelita-nestle.jpg" alt="Preparación Chocolate Abuelita Clásico - Nestlé"><img class="wk-m" src="img/preparacion-tableta-chocolate-abuelita-nestle-movil.png" alt="Preparación Chocolate Abuelita Clásico - Nestlé">' 
							)
						
				.ui-block-padding
					a.ui-btn#lightbox-call-to-action(href="#") Comprar
									
	include footer.jade
