//- index.jade
extends header.jade

block title
	title Chocolate Abuelita - Nestl√©

block description
	meta(name="description" content="Chocolate Abuelita")

block content

	main#home(role="main")
		section#main-slider.wk-section 
			.wk-section-wrap
				.slider
					.slide#slide1
						img.slide-img.wk-d(src=url + "img/banner-home-abuelita-nestle.jpg")
						img.slide-img.wk-m(src=url + "img/banner-mobile-home-abuelita-nestle.jpg")
						a.ui-btn-gold.animate-top(href="#")
							span.icon.fa.fa-shopping-cart
							span COMPRAR
					.slide#slide2
						img.slide-img.wk-d(data-lazy=url + "img/banner-promo-abuelita-nestle.jpg")
						img.slide-img.wk-m(data-lazy=url + "img/banner-movil-promo-abuelita-nestle-btn.jpg")
						a.ui-btn-pink.animate-left(href="#") 
							span.icon.fa.fa-shopping-cart
							span COMPRAR
		nav#main-icon-nav.wk-section
			.wk-section-wrap
				.wk-cols
					.wk-col
						a.main-icon-nav-wrap(href="historia.html")
							img.main-icon-nav-img.wk-img-responsive(src= url + "img/01-image-historia-abuelita-nestle.jpg")

							.container
								//img.main-icon-nav-icon(src= url + "img/icon-historia.png" alt="Historia")
								//- 
									+iconHistoria, +iconProductos +iconRecetas +iconCacaoPlan
									Mixins, se generan en _svgs.jade 
								
								+iconHistoria
								span.content Historia
					.wk-col
						a.main-icon-nav-wrap(href="productos.html")
							img.main-icon-nav-img.wk-img-responsive(src= url + "img/02-image-productos-abuelita-nestle.jpg")
							.container
								//img.main-icon-nav-icon(src= url + "img/icon-productos.png" alt="Productos")
								+iconProductos
								span.content Productos
					.wk-col
						a.main-icon-nav-wrap(href="recetas.html")
							img.main-icon-nav-img.wk-img-responsive(src= url + "img/03-image-recetas-abuelita-nestle.jpg")
							.container
								//img.main-icon-nav-icon(src= url + "img/icon-recetas.png" alt="Recentas")
								+iconRecetas
								span.content Recetas
					.wk-col
						a.main-icon-nav-wrap(href="cocoa-plan.html")
							img.main-icon-nav-img.wk-img-responsive(src= url + "img/04-image-cocoa-plan-nestle.jpg")
							.container
								//img.main-icon-nav-icon(src= url + "img/icon-cocoa-plan.png" alt="Cocoa Plan")
								+iconCacaoPlan
								span
									img.wk-img-responsive(src= url + "img/logo-cocoa-plan.png" alt="Cocoa Plan Logo")

	include footer.jade
