//- productos.jade
extends header.jade

block title
	title Chocolate Abuelita  - Nestlé

block description
	meta(name="description" content="Descubre cómo preparar Chocolate Abuelita<sup>®</sup> y otras deliciosas recetas en https://www.abuelita.com.mx/")

block openGraph
	meta(property="og:url" content=url + 'como-preparar-chocolate-abuelita.html')
	meta(property="og:title" content="Cómo preparar Chocolate Abuelita  - Nestlé")
	meta(property="og:description" content="Descubre cómo preparar Chocolate Abuelita<sup>®</sup> y otras deliciosas recetas en https://www.abuelita.com.mx/")
	meta(property="og:type" content="article")
	meta(property="og:image" content=url + 'img/compartir-receta-tableta-chocolate-abuelita-nestle.png')

block twitterCards
	meta(name="twitter:card" content="summary_large_image")
	meta(name="twitter:site" content='@' + twitterUser)
	meta(name="twitter:creator" content='@' + twitterUser)
	meta(name="twitter:title" content="Cómo preparar Chocolate Abuelita  - Nestlé")
	meta(name="twitter:description" content="Descubre cómo preparar Chocolate Abuelita<sup>®</sup> y otras deliciosas recetas en https://www.abuelita.com.mx/")
	meta(name="twitter:image" content=url + 'img/compartir-receta-tableta-chocolate-abuelita-nestle.png')
		
block content

	//- 
		Instrucciones para botón de compartir
		
		Abajo encontrarás la variable mensajeDeTwitter, simplemente introduce 
		el texto que aparecerá al compartir en twitter
		
		EL botón se genera desde un mixin en jade/_mixins.jade 
		
		El mensaje se puede introducir directamente en el mixin como string pero para practicidad
		se ha incluido en la variable mencionada.
		
		+btnShare( 'ElMensajeDeTwitter' )

	-var mensajeDeTwitter = 'Descubre cómo preparar Chocolate Abuelita<sup>®</sup> y otras deliciosas recetas en www.abuelita.com.mx'
	-var receta = 'como-preparar-chocolate-abuelita.html'

	main#receta(role="main")

		+sectionHeader(
				'receta-banner', 
				'ui-bg-bold', 
				'Receta', 
				'Cómo preparar Chocolate Abuelita®', 
				'img/receta-banner-como-preparar-chocolate-abuelita-nestle.jpg', 
				'img/icon-recetas.png'
			)

		.ui-block-texture-cover.print
			section#receta-video.wk-section.ui-box-model.wk-wrap-1100.wk-margin-y-40.no-print
				.wk-section-wrap
					a(href="https://www.youtube.com/watch?v=YgfaTSdSeMo" data-fancybox)
						img.wk-img-responsive(src="img/video-play-receta-tableta-chocolate-abuelita-nestle.jpg")
			aside#receta-ingredientes.wk-wrap-1100.wk-margin-y-40.ui-box-model
				.wk-section-wrap
					
					h6.ui-title
						img(src="img/icon-ingredientes.png")
						| Ingredientes
					
					ul
						li 2 latas de Leche Evaporada CARNATION<sup>®</sup> CLAVEL<sup>®</sup>
						li 1 taza de agua
						li 1 tableta de Chocolate para Mesa ABUELITA<sup>®</sup> (90 g)
						
					h6.ui-title
						img(src="img/icon-hornear.png")
						| Horno precalentado a 180°C
					
					h6.ui-title
						img(src="img/icon-preparacion.png")
						| Preparación
					
			section#receta-content.wk-wrap-1100.ui-box-model.wk-m-text-center
				.wk-section-wrap
				
					//
						+recetaPaso ( 'numeroDePaso', 'Contenido' )
						
					
					+recetaPaso ( '1', 'Calienta la Leche Evaporada CARNATION<sup>®</sup> CLAVEL<sup>®</sup> con el agua y cuando empiece a hervir, agrega la tableta de Chocolate para Mesa ABUELITA<sup>®</sup>.' )
					
					+recetaPaso ( '2', 'Mueve hasta que el Chocolate para Mesa ABUELITA<sup>®</sup> se disuelva.' )
					
					+recetaPaso ( '3', 'Calienta por 5 minutos más y disfruta.' )
				
				
					+recetaPaso ( '', 'Tiempo de preparación: 10 minutos.' )
							
			section#receta-buttons.wk-wrap-1100.wk-text-center.ui-d-row-padding
				.wk-section-wrap
					.wk-cols
						.wk-col-3.ui-box-model.wk-d
							a.ui-btn(href="#" onclick="window.print()")
								img(src="img/icon-imprimir.png" alt="Imprimir")
								span Imprimir
								
						.wk-col-3.ui-box-model.no-print
							+btnShare( mensajeDeTwitter, receta )
							
						.wk-col-3.ui-box-model.no-print
							a.ui-btn(href="/recetas.html") 
								img(src="img/icon-conoce-mas-recetas.png" alt="Más recetas")
								span Más recetas
								
						.wk-col-3.ui-box-model.no-print
							a.ui-btn(href="#") 
								span.icon.fa.fa-shopping-cart.ui-text-gold
								span Comprar			
					
			+sectionLeyend('receta-leyend', '')
				img.wk-margin-y-20(src="img/icon-consejo.png" alt="Consejo de Abuelita - Nestle")
				h3.ui-title.ui-text-gold Consejo de Abuelita&reg;
				p Para obtener un chocolate espumoso y rico debemos disolver el chocolate lentamente con ayuda de un molinillo hasta que se disuelva todo, es importante hacerlo constantemente para que quede muy espumoso.
													
	include footer.jade
